{
  "manifest_version": 3,
  "name": "Atlas AI",
  "short_name": "Atlas AI",
  "version": "1.0.4",
  "description": "AI-powered assistant with access to Confluence, Jira, and web knowledge. Search documentation, query tickets, and get intelligent answers using GPT, Claude, or Gemini.",
  "permissions": [
    "storage",
    "contextMenus",
    "sidePanel"
  ],
  "host_permissions": [
    "http://localhost:*/*",
    "https://*/*"
  ],
  "action": {
    "default_title": "Open Atlas AI",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Command+Shift+A"
      },
      "description": "Open Atlas AI popup"
    },
    "new-chat": {
      "suggested_key": {
        "default": "Ctrl+Shift+N",
        "mac": "Command+Shift+N"
      },
      "description": "Start a new chat session"
    },
    "toggle-theme": {
      "suggested_key": {
        "default": "Ctrl+Shift+T",
        "mac": "Command+Shift+T"
      },
      "description": "Toggle dark/light theme"
    }
  },
  "minimum_chrome_version": "88"
}